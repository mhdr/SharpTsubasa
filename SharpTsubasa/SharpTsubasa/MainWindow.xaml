<Window x:Class="SharpTsubasa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTsubasa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,5,0">ADB</TextBlock>
                <TextBox x:Name="TextBoxAdb" Height="40" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button x:Name="ButtonStartAdb" Content="Start ADB Server" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="40"
                    Click="ButtonStartAdb_Click" Margin="20,0,0,0"/>
            </StackPanel>


            <ScrollViewer Margin="0,10,0,0">
                <StackPanel Orientation="Vertical" Name="StackPanelLog" >
                    
                </StackPanel>
            </ScrollViewer>

        </StackPanel>

        
        <Border BorderBrush="Black" BorderThickness="1"/>

    </Grid>
</Window>
